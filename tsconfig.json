{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "./src",
    "lib": ["es2015.promise", "es5", "dom", "webworker"],
    
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src"]
}
